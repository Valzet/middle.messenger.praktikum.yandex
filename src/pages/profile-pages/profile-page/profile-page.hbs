<section class="content">
  {{#with (profile)}}
  <div class="avatar">
    {{> ProfileAvatar src=avatar alt="Мой аватар"}}
    <button class="avatar__overlay">Поменять
      аватар</button>
  </div>
  <h2>{{first_name}}</h2>
  {{/with}}
  {{#with (profile)}}
  <ul class="list">
    {{>ProfileInput inputName='Почта' type="text" value=email name=email disabled='true'}}
    {{>ProfileInput inputName='Логин' type="text" value=login name=login disabled='true'}}
    {{>ProfileInput inputName='Имя' type="text" value=first_name name=first_name disabled='true'}}
    {{>ProfileInput inputName='Фамилия' type="text" value=second_name name=second_name disabled='true'}}
    {{>ProfileInput inputName='Имя в чате' type="text" value=display_name name=display_name disabled='true'}}
    {{>ProfileInput inputName='Телефон' type="text" value=phone name=phone disabled='true'}}
  </ul>
  {{/with}}
  <div class="buttons">
    {{> Link page="editProfile" text="Изменить данные" className='link__align'}}
    {{> Link page="changePassword" text="Изменить пароль" className='link__align'}}
    {{> Link page="login" text="Выйти" className='link__align link__secondary'}}
  </div>
</section>
